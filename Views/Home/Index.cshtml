@{
    ViewData["Title"] = "Home";
}

<style>
    .background-image {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20%;
    }
    .text-content {
        text-align: center;
        color: cream;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .text-content h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }
    .text-content p {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    .text-content a {
        background-color: #553c9a;
        color: #fff;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
    }
    .discover-more {
        margin-top: 1rem;
    }
</style>

<div class="background-image">
    <div class="text-content">
        <h1>We Provide Reliable <br>&amp;<br> Luxury Cars for Rent</h1><br>
        <p>Experience the Ultimate Comfort and Convenience with Our Premium Car Rental Services</p>
        <a class="discover-more bg-dark text-white" href="/car">Discover Car</a>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.js"></script>
    <script>
        $(document).ready(function () {
            $(".carz").slick({
                autoplay: true,
                dots: true,
                speed: 1000,
                customPaging: function (slider, i) {
                    var thumb = $(slider.$slides[i]).data();
                    return '<a>' + (i + 1) + '</a>';
                },
            })
        });
    </script>
} 
