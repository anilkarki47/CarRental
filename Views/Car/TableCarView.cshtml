@model IEnumerable<Car>
@{
    ViewData["Title"] = "Car Page";
}

<style>
    #cartable {
        padding-top: 20px;
    } 
    .dataTables_filter input {
        border: none !important;
        box-shadow: none !important;
        outline: 1px solid #ccc !important;
    }
    .dataTables_filter input:hover,
    .dataTables_filter input:focus {
        box-shadow: none !important;
        outline: 1px solid #ccc !important;
    }
    .delete-confirm-button {
        background-color: #d9534f !important;
        /* box-shadow: none !important;
        border: none !important;
        box-shadow: none !important;
        border-radius: 0 !important; */
    }

    .delete-cancel-button {
        background-color: #f2f2f2 !important;
        color: black !important;
        /* border: none !important;
        box-shadow: none !important;
        border-radius: 0 !important; */
    }
</style>  

<div class="container p-3 test">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cars List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Car" asp-action="Create" class="btn btn-dark me-2">Add Car</a>
            <a asp-controller="Car" asp-action="Index" class="btn btn-dark">Picture View</a>

        </div>
    </div>
</div>
<hr class="mt-3"/>
<table class="table table-striped" id="cartable">
    <thead>
        <tr>
            <th class="bg-dark text-light">Manufacturer</th>
            <th class="bg-dark text-light">Model</th>
            <th class="bg-dark text-light">Color</th>
            <th class="bg-dark text-light">RentalRate</th>
            <th class="bg-dark text-light">Vehicle No</th>
            <th class="bg-dark text-light">Status</th>
            <th class="bg-dark text-light">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>
                    @car.Manufacturer
                </td>
                <td>
                    @car.Model
                </td>
                <td>
                    @car.Color
                </td>
                <td>
                    @car.RentalRate
                </td>
                <td>
                    @car.VehicleNo
                </td>
                <td>
                    @car.IsAvailable
                </td>
                <td>
                   <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.CarID" class="anchor-size text-dark"><i class="fas fa-edit text-dark"></i></a>
                    <a onclick="deleteCar('@car.CarID')" class="anchor-size text-danger"><i class="fa fa-trash" style="color: #d9534f;"></i></a>
                    <a asp-controller="Car" asp-action="ViewCar" asp-route-id="@car.CarID" class="anchor-size text-dark"><i class="fa-solid fa-eye text-dark"></i></a>

                  
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#cartable').DataTable()
        });
    </script>
    <script>
        function deleteCar(carId) {
            Swal.fire({
                 html: `
                <div class="swal2-custom-icon">
                    <i class="bi bi-trash text-danger" style="font-size: 5rem;"></i>
                </div>
                <div class="swal2-custom-title fs-1 pb-3 fw-bold">
                    Are you sure?
                </div>
                <div class="swal2-custom-text pt-3 pb-3">
                    Do you really want to delete this car? This process cannot be undone!
                </div>
                `,
                text: "You won't be able to revert this!",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Make an AJAX call to delete the car from the server
                    $.ajax({
                        type: "POST",
                        url: "/Car/Delete/" + carId,
                        success: function (data) {
                            // If the deletion was successful, reload the page
                            location.reload();
                        },
                        error: function (xhr, status, error) {
                            // If there was an error, show an error message
                            Swal.fire('Error', 'An error occurred while deleting the car', 'error');
                        }
                    });
                }
            })
        }
    </script>
}